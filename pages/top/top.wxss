.top-wrap {
  padding: 0 20rpx;
  box-sizing: border-box;
}
.top-list .top-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 20rpx;
  background: linear-gradient(to right, cornflowerblue, dodgerblue);
  border-radius: 20rpx;
  margin: 20rpx 0;
}
.top-list .top-item.self {
  background: linear-gradient(to right, orange, darkorange);
}
.top-list .user-info {
  display: flex;
  align-items: center;
  width: 400rpx;
}
.top-list .name {
  display: inline-block;
  width: 250rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.top-list .num {
  font-weight: bold;
}
.top-list .num.f {
  font-size: 2em;
}
.top-list .num.s {
  font-size: 1.7em;
}
.top-list .num.t {
  font-size: 1.4em;
}
.top-list .avator {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 3px solid #fff;
  margin-right: 20rpx;
  vertical-align: middle;
}
.top-list .right-num-wrap {
  padding: 10rpx 20rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 40rpx;
}
.top-list .right-num-wrap .image {
  width: 50rpx;
  height: 25rpx;
  margin-right: 10rpx;
}
.no-data {
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  font-size: 64rpx;
  color: yellow;
}
